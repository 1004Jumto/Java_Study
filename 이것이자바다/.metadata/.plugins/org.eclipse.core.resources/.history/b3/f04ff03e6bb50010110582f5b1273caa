package chOmok;

public class Board {
	int size;
	String[][] map;

	Board(int size) {
		size++;
		this.size = size;
		map = new String[size][size];
		for (int row = 0; row < size; row++) {
			for (int col = 0; col < size; col++) {
				map[row][col] = ".";
			}
		} 
		 
		for (int col = 0, ch = 65; col < size; col++, ch++) {
			map[col][0] = String.valueOf((char)ch);
		}
		for(int row = 0; row < size; row++) {
			map[size-1][row] = String.valueOf(row);
		}
	}

	public void print() {
		for (int row = 0; row < size; row++) {
			for (int col = 0; col < size; col++) {
				System.out.print(" " + map[row][col]);
			}
			System.out.println();
		}
	}
}
