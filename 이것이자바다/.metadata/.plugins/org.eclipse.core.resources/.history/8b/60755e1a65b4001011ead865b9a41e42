package ch06;

public class Solution {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		Solution s = new Solution();

		int x = 34151;
//		int[] y = { 10000, -13000, -4000, -2000, 6500, -20000 };
		int[] y = {-34152, -40000, -50000};

		int result = s.solution(x, y);
		System.out.println(result);

	}

	int solution(int m, int[] ledger) {
		int account = 0;

		// 배열 순회
		for (int i : ledger) {
			// 계산 결과 -m보다 같거나 크면 결과 적용
			int money = account + i;
			if (money >= -Math.abs(m)) {
				account = money;
			}
		}

		return account;
	}

}
