package ch06;

public class Television {
	
	// 상수 
	static final String CLASS_NAME = "Television";
	
	// 정적 필드
	static String company = "My Com";
	static String model = "LCD";
	static String info;
	static Double sale;
	
	static {
		info = company  + " : " + model;
//		sale = price * 0.8;		// 컴파일 에러
		
		Television t = new Television();
		sale = t.price * 0.8;
	}
	
	// 인스턴스 필드
	int price = 100;
	final int number;		// 생성자에서라도 초기화 되어야함. 그렇지 않으면 컴파일 에러
	
	public Television() {
		this.number = 1;
	}
}
