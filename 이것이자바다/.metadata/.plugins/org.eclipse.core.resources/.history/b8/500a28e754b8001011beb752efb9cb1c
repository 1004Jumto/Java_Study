package ch08;

import ch08.test.IDataAccessObject;
import ch08.test.MySqlDao;
import ch08.test.OracleDao;

public class InterfaceEx {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		SmartTvImpl tv = new SmartTvImpl();
		tv.search();
		tv.turnOff();
		IRemoteControl remote = new SmartTvImpl();
		remote.turnOff();

		dbWork(new OracleDao());
		dbWork(new MySqlDao());

	}

	public static void dbWork(IDataAccessObject dao) {
		dao.select();
		dao.insert();
		dao.update();
		dao.delete();
	}

}
