package ch07;

public class InheritanceEx {

	public static void main(String[] args) {
		SmartPhone myphone = new SmartPhone("갤럭시", "미드나잇블루"); 
		System.out.println(myphone.model);
		System.out.println(myphone.color); 
		System.out.println(myphone.wifi); 
		myphone.bell();
		 
		// 업캐스팅
		Phone p = new SmartPhone("갤럭시", "미드나잇블루");
		System.out.println(p.color);
		p.bell(); 
		SmartPhone p2 = new SmartPhone("iphone","레드");
		
		
		
		// 다운캐스팅
//		SmartPhone phone = new Phone();	// 컴파일 에러
		SmartPhone sp = (SmartPhone)p;
		sp.setWifi(true);
		System.out.println(sp.wifi);
		
		
		// 런타임 에러
//		Phone p2 = new Phone();
//		SmartPhone sp2 = (SmartPhone)p2;
//		sp2.setWifi(false);
		
		Vehicle vehicle = new Bus();
		Driver d = new Driver();
		d.drive(vehicle);
		
		
	}

}
