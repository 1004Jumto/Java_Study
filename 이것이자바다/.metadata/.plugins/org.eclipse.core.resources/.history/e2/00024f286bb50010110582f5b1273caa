package chOmok;

public class Board {
	int size;
	String[][] map;

	Board(int size) {
		size++;
		this.size = size;
		map = new String[size][size];
		for (int row = 0; row < size; row++) {
			for (int col = 0; col < size; col++) {
				map[row][col] = ".";
			}
		} 
		
		for (int row = 0, ch = 65; row < size; row++, ch++) {
			map[row][0] = String.valueOf((char)ch);
		}
	}

	public void print() {
		for (int row = 0; row < size; row++) {
			for (int col = 0; col < size; col++) {
				System.out.print(" " + map[row][col]);
			}
			System.out.println();
		}
	}
}
