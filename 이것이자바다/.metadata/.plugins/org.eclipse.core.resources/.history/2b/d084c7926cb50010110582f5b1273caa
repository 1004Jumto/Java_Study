package chOmok;

public class Board {
	int size;
	int cnt=0;
	String[][] map;

	Board(int size) {
//		size++;
		
		this.size = size;
		map = new String[size][size];
		for (int row = 0; row < size; row++) {
			for (int col = 0; col < size; col++) {
				map[row][col] = ".";
			}
		}

//		for (int col = 1, ch = 65; col < size; col++, ch++) {
//			map[size-1][col] = String.valueOf((char)ch);
//		}
//		for (int row = 0; row < size-1; row++) {
//			map[row][0] = String.valueOf(row);
//		}

	}

	public void print() {
		char ch = 'A';
		for (int row = 0; row < size; row++) {
			System.out.printf("%2d", cnt++);
			for (int col = 0; col < size; col++) {
				System.out.print(" " + map[row][col]);
			}
			System.out.println();
		}
		System.out.print("   ");
		for (int i = 0; i < size; i++) {
			System.out.print((char) (ch++) + " ");
		}
		System.out.println();
	}
}
