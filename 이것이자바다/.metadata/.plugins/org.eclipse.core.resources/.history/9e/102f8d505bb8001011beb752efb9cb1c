package ch09;

public class Home{
	// 1. 필드에 익명 구현 객체 대입
	private RemoteControl rc = new RemoteControl() {
		
		@Override
		public void turnOn() {
			System.out.println("필드: 티비켜기");			
		}
		
		@Override
		public void turnOff() {}
	};
	
	// 2. 메소드 
	public void use() {
		RemoteControl rc = new RemoteControl() {
			@Override
			public void turnOn() {
				System.out.println("메소드: 티비켜기");			
			}
			
			@Override
			public void turnOff() {}
		};
		
		rc.turnOn();
	}
 

}
