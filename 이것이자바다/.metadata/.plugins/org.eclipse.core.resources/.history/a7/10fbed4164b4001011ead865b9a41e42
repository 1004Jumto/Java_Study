package ch06;

public class Solution {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		Solution s = new Solution();
		
		int x = 5000;
		int[] y = {10000, -13000, -4000, -2000, 6500, -20000};
		
		int result = s.solution(x, y);
		
		System.out.println(result);
		
	}
	
	int solution(int m ,int[] ledger) {
		int account = 0;
		
		for(int i : ledger) {
			int money = account + i;
			if(money > -m) {
				account = money;
			}
		}

		return account;
	}

}
